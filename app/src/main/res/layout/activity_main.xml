<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/topNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/darkgrey">

        <TextView
            android:id="@+id/title"
            android:gravity="start|center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_marginStart="30dp"
            android:layout_height="match_parent"
            android:text="@string/privateer_movies"
            android:textSize="@dimen/title"
            android:textColor="@color/white">

        </TextView>
        <ImageView
            android:id="@+id/topNav_btnSearch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_search_48"
            android:padding="10dp">

        </ImageView>


    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:background="@color/darkgrey"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNavContainer"
        app:layout_constraintBottom_toTopOf="@id/navContainer"
        >

    </androidx.fragment.app.FragmentContainerView>

    <LinearLayout
        android:orientation="horizontal"

        android:id="@+id/navContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/darkgrey">



        <ImageView
            android:id="@+id/nav_btnMovie"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_local_movies_48"
            android:padding="10dp">

        </ImageView>


        <ImageView
            android:id="@+id/nav_btnSeries"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_tv_48"
            android:padding="10dp">

        </ImageView>


        <ImageView
            android:id="@+id/nav_btnWatchlist"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_remove_red_eye_24"
            android:padding="10dp">

        </ImageView>


        <ImageView
            android:id="@+id/nav_btnniklas"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_videogame_asset_48"
            android:padding="10dp">

        </ImageView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>